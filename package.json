{
  "name": "node-teapot",
  "version": "3.0.4",
  "description": "Utilities for working with HTTP status codes, errors, and more",
  "author": {
    "name": "Ty-Lucas Kelley",
    "email": "ty@greylocklabs.com",
    "url": "https://greylocklabs.com"
  },
  "homepage": "https://github.com/greylocklabs/teapot#readme",
  "bugs": "https://github.com/greylocklabs/teapot/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/greylocklabs/teapot"
  },
  "license": "MIT",
  "keywords": [
    "http",
    "rest",
    "api",
    "error",
    "status",
    "koa",
    "express"
  ],
  "files": [
    "dist"
  ],
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "postclean": "yarn install",
    "prebuild": "rm -rf dist",
    "build": "microbundle --external http --no-compress --target node",
    "lint": "yarn lint:js && yarn lint:md",
    "lint:js": "eslint src --ext ts",
    "lint:md": "markdownlint README.md CHANGELOG.md .github",
    "test": "jest",
    "test:coverage": "jest --coverage && cat coverage/lcov.info | coveralls",
    "prepublishOnly": "yarn build && yarn test"
  },
  "engines": {
    "node": ">= 8",
    "yarn": ">= 1.15.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@greylocklabs/eslint-config": "3.0.3",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/koa": "2.0.48",
    "@types/koa-router": "7.0.40",
    "@types/node": "11.13.6",
    "@types/supertest": "2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "coveralls": "3.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-vue": "^5.2.2",
    "express": "4.16.4",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "koa": "2.7.0",
    "koa-router": "7.4.0",
    "markdownlint-cli": "0.15.0",
    "microbundle": "0.11.0",
    "shelljs": "0.8.3",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "typescript": "^3.4.4"
  }
}
