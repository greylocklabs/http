{
    "name": "node-teapot",
    "version": "2.0.2",
    "description": "Utilities for working with HTTP status codes, errors, and more",
    "author": {
        "name": "Ty-Lucas Kelley",
        "email": "ty@greylocklabs.com",
        "url": "https://greylocklabs.com"
    },
    "homepage": "https://github.com/greylocklabs/teapot#readme",
    "bugs": "https://github.com/greylocklabs/teapot/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/greylocklabs/teapot"
    },
    "license": "MIT",
    "keywords": [
        "http",
        "error",
        "status",
        "koa",
        "express"
    ],
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "reinstall": "rimraf node_modules && npm install",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "build": "babel --no-comments --minified src -d dist",
        "lint": "npm run lint:js && npm run lint:md",
        "lint:js": "eslint src/**/*.js test/**/*.js",
        "lint:md": "markdownlint README.md CHANGELOG.md .github",
        "flow": "flow",
        "pretest": "npm run build && npm run lint && npm run flow",
        "test": "cross-env NODE_ENV=test nyc ava test/{unit,functional}",
        "coveralls": "nyc report --reporter=text-lcov | coveralls",
        "prepublishOnly": "npm run build && npm test",
        "precommit": "npm run lint && npm run flow",
        "prepush": "npm test"
    },
    "engines": {
        "node": ">= 7"
    },
    "ava": {
        "require": "babel-register",
        "babel": "inherit",
        "verbose": true
    },
    "devDependencies": {
        "@greylocklabs/eslint-config": "1.12.2",
        "ava": "0.25.0",
        "await-result": "2.2.1",
        "babel-cli": "6.26.0",
        "babel-eslint": "8.2.5",
        "babel-plugin-add-module-exports": "0.2.1",
        "babel-plugin-istanbul": "4.1.6",
        "babel-preset-env": "1.7.0",
        "babel-preset-flow": "6.23.0",
        "coveralls": "3.0.2",
        "cross-env": "5.2.0",
        "eslint": "5.1.0",
        "eslint-plugin-ava": "4.5.1",
        "eslint-plugin-flowtype": "2.50.0",
        "eslint-plugin-import": "2.13.0",
        "eslint-plugin-promise": "3.8.0",
        "eslint-plugin-security": "1.4.0",
        "eslint-plugin-vue": "4.5.0",
        "express": "4.16.3",
        "flow-bin": "0.76.0",
        "husky": "0.14.3",
        "koa": "2.5.1",
        "koa-router": "7.4.0",
        "markdownlint-cli": "0.10.0",
        "nyc": "12.0.2",
        "supertest": "3.1.0"
    }
}
